<div class="booyah-box col-10 offset-1">
  <h1><%= @content.name %></h1>
  <i><%= @content.address %></i>
  <br /><br />
  <p><%= @content.description %></p>

  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
    #map {
      height: 100%;
    }
  </style>
  </head>
  <body>
  <div id="map"></div>
  <script>

    function initMap() {
      var myLatLng = {lat: -25.363, lng: 131.044};

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 4,
        center: myLatLng
      });

      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        title: 'Hello World!'
      });
    }
  </script>

  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap">
  </script>
  

  <div class="float-right">
    <% if current_user && current_user == @content.user %>
      <%= link_to 'Edit', edit_content_path(@content), class: 'btn btn-primary' %>
    <%= link_to 'Destroy', content_path(@content), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>