<% @content.each do |content| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= content.name %></h1>
    <i><%= content.address %></i><br /><br />
    <p><%= content.description %></p><br />

    <% if content.user.present? %>
      <small><%= content.user.email %></small>
    <% end %>
  </div>
<% end %>